# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches all files with a .cs extension
[*.cs]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

# Matches all files with a .json extension
[*.json]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# Matches all files with a .xml extension
[*.xml]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true